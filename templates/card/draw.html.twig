{% extends "base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

<div class="container">
    <div class="row mt-5 col-md-12">
        <div class="col-sm-2 offset-4">
            <form method="post">
                <input type="submit" name="draw" value="Draw">
                <input type="submit" name="clear" value="Clear">
                {{ include('card/flash-message.html.twig') }}
            </form>
        </div>
        <div class="col-sm-2 ">
            {% if card == 'back_card' %}
            <img src='{{ asset('img/cards_img/card_back.svg') }}' alt="card" width="90">
            {% else %}
            <img src='{{ asset('img/cards_img/' ~ card ~ '.svg') }}' alt="card" width="90">
            {% endif %}
        </div>

    </div>
</div>

{% endblock %}
